  "author": "alycd",
  "license": "MIT",
  "homepage": "https://github.com/alycd/agent-skills/tree/main/.claude/skills/draw-io",
  "repository": {
    "type": "git",
    "url": "https://github.com/alycd/agent-skills.git",
    "directory": ".claude/skills/draw-io"
  },
  "category": "visualization",
  "tags": [
    "diagrams",
    "architecture",
    "draw.io",
    "flowcharts",
    "visualization",
    "aws",
    "gcp",
    "network-diagrams",
